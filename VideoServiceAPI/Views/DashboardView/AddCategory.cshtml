@model VideoService.Models.Models.Category

@{
    ViewData["Title"] = "Add new category";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="jumbotron text-center">
            <form method="post" action="~/dashboard/add">
                <label>Category Name: </label>
                <input type="text" name="Name" placeholder="e.g. Games" />
                <hr />
                <input type="submit" value="Create" class="btn btn-success btn-lg m-3" />
                <a class="btn btn-primary btn-lg" href="/dashboard/showall" role="button">Back</a>
            </form>
            <hr class="my-4">
        </div>
    </div>
</div>